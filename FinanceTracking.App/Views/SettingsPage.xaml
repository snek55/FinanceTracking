<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTracking.App.Views.SettingsPage">
    <ContentPage.Content>
        <Grid>
            <Picker Title="Select a currency" ItemsSource="{Binding Currencies}"
                    SelectedItem="{Binding DefaultCurrency}">
            </Picker>
            <Button Text="Save" VerticalOptions="End"
                    HorizontalOptions="End" Clicked="OnSaveClicked">
            </Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>