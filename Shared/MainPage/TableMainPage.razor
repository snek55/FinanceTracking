<TableTemplate Items="Shopping">
    <TableHeader>
        <th>Name</th>
        <th>Quantity</th>
        <th>Total</th>
    </TableHeader>
    <RowTemplate>
        <td>@context.Product.Name</td>
        <td>@context.Quantity @GetUnitsMeasurement(context.Product.ProductMeasurement)</td>
        <td>
            @context.Total @CurrencySymbol(currentCurrency.CurType)
            <br>
            @context.Price @CurrencySymbol(currentCurrency.CurType)/@GetUnitsMeasurement(context.Product.ProductMeasurement)
        </td>
    </RowTemplate>
</TableTemplate>